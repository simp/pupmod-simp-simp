<%
  t_allowroot = nil
  unless @_trusted_nets.empty?
    t_allowroot = scope.call_function('simp_apache::munge_httpd_networks',[ @_trusted_nets ]).map{ |x|
      x = "    Allow from #{x}"
    }.join("\n")
  end
-%>
<%
  t_dirs = ['/yum']

  t_dirs.each do |t_dir|
-%>
Alias <%= t_dir %> /var/www<%= t_dir %>

<Location <%= t_dir %>>
    Options +Indexes

    Order allow,deny
    Allow from 127.0.0.1
    Allow from ::1
<% if t_allowroot -%>
<%= t_allowroot %>
<% end -%>
    Allow from <%= @facts.dig('networking', 'domain') || 'localhost' %>
</Location>

<% end -%>
